% project 02
% composite trapezoilal rule for numerical intergration
%
% Args
%   f           (function)  function to evaluate
%   n           (int)       n
%   rmin        (int)       rmin
%   rmax        (int)       rmax
%
% Returns
%   val         (float)     val
%   h           (float)     h
%
function [val, h] = trapezoidal(f, n, rmin, rmax)

    h = (rmax-rmin)/ n;
    
    j = 1:n-1;
    c = sum(f(j);
    val = (h/2) * (f(rmin) + 2 * c  + f(rmax));
    
%     i = 1:n;
%     x0 = rmin + (i-1)*h;
%     x1 = rmin + i*h;
%     x = (h/2) * (f(x0) + f(x1));
%     val = sum(x);
    
end







