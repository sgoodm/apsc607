% project 02
% adaptive composite Simpson's rule for numerical intergration
%
% Args
%   f           (function)  function to evaluate
%   n           (int)       n
%   rmin        (int)       rmin
%   rmax        (int)       rmax
%
% Returns
%   val         (float)     val
%   h           (float)     h
%
function [val, a, L] = adaptive_simpsons(f, rmin, rmax)

    TOL = 1E-12;

    val = 0;
    i = 1;
    TOL(i) = 10*TOL;
    a(i) = rmin;
    h(i) = (rmax-rmin)/2;
    
    F0(i) = f(rmin);
    F1(i) = f(a+h(i));
    F2(i) = f(rmax);
    S(i) = h(i) * (F0(i) + 4*F1(i) + F2(i)) / 3;
    L(i) = 1;
    
    while i > 0
        % newleft half subinterval midpoint
        F1a = f(a(i)+h(i)/2);
        % new right half subinterval midpoint
        F1b = f(a(i)+3*h(i)/2);
        
        % halve h for subinterval
        h = h(i)/2;
        S1 = h * (F0(i) + 4*F1a + F1(i)) / 3;
        S2 = h * (F1(i) + 4*F1b + F2(i)) / 3;
       
        % variables for current level
        v1 = a(i);
        v2 = F0(i);
        v3 = F1(i);
        v4 = F2(i);
        v5 = h(i);
        v6 = TOL(i);
        v7 = S(i);
        v8 = L(i);
        
        i = i-1;
        
        if abs(S1+S2-v7) < v6
            val = val + (S1+S2);
        else
            i = i+1;
            a(i) = v1 + v5;
            F0(i) = v3;
            F1(i) = F1b;
            F2(i) = v4;
            h(i) = v5/2;
            TOL(i) = v6/2;
            S(i) = S2;
            L(i) = v8 + 1;

            i = i+1;
            a(i) = v1;
            F0(i) = v2;
            F1(i) = F1a;
            F2(i) = v3;
            h(i) = h(i-1);
            TOL(i) = TOL(i-1);
            S(i) = S1;
            L(i) = L(i-1);

        end

    end

end






